# ============================================
# SERVER CONFIGURATION
# ============================================

# Port on which the backend server will run
PORT=

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB connection string
# Example: mongodb://localhost:27017/uniloop
# Example (Atlas): mongodb+srv://username:password@cluster.mongodb.net/uniloop
MONGO_URI=

# ============================================
# AUTHENTICATION (JWT) CONFIGURATION
# ============================================

# Secret key used to sign JWT access tokens
# Must be long, random, and secure
JWT_SECRET=

# Secret key used to sign JWT refresh tokens
# Must be different from JWT_SECRET
JWT_REFRESH_SECRET=

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email service provider
# Example: gmail
EMAIL_SERVICE=

# Email address used to send emails
# Example: your_email@gmail.com
EMAIL_USER=

# Email app password (NOT your normal email password)
# Generate from Google App Passwords
EMAIL_PASS=

# ============================================
# GOOGLE RECAPTCHA CONFIGURATION
# ============================================

# Secret key from Google reCAPTCHA admin console
# Used for backend verification
RECAPTCHA_SECRET_KEY=

# ============================================
# CLIENT CONFIGURATION
# ============================================

# Frontend URL allowed to access backend (CORS)
# Example: http://localhost:5173
CLIENT_URL=